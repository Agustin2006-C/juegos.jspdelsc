  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <h1 class="titulo">TaTeTi</h1>

  <!-- Formulario para nombres y modo de juego -->
  <form id="tateti-form">
    <input type="text" id="player1" placeholder="Nombre del Jugador 1" required />
    <select id="mode">
      <option value="2">Contra otro jugador</option>
      <option value="1">Contra la m√°quina</option>
    </select>
    <input type="text" id="player2" placeholder="Nombre del Jugador 2" />
    <button type="submit">Iniciar Juego</button>
    <button onclick="location.href='/'">Volver al inicio</button>

  </form>

  <!-- Tablero de juego -->
  <div id="tateti-container" class="oculto">
