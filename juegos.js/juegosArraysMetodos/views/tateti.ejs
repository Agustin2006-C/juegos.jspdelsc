      <% for(let i = 0; i < 9; i++) { %>
        <div class="casilla" data-index="<%= i %>"></div>
      <% } %>
    </div>
<button onclick="location.href='/'">Volver al inicio</button>
  </div>

  <script src="/js/tateti.js"></script>
</body>
</html>
